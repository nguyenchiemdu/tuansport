<html>

<head>
        <meta charset="utf-8">
        <meta name="viewport" content="width=device-width, initial-scale=1">
        <title>Tuấn Sport Đà Nẵng – Số 1 Đà Nẵng</title>
        <%- include ('../common/lib/font_css')%>
                <%- include ('../common/lib/feather_icon_css')%>
                        <%- include ('../common/lib/bootstrap_css')%>


                                <%- include ('../common/css/style')%>
                                        <link rel="icon" type="image/png" sizes="16x16" href="./assets/images/logo.png">
</head>

<body>

        <section style="background-color: var(--light-gray-color);">
                <div class="container-fluid ">
                        <div class="row justify-item-center align-items-center h-100">
                                <div class="">
                                        <div class="rounded-3 text-black">
                                                <div class="row g-0 p-0 h-100 h-md-0 w-lg-0"
                                                        style="background-color: var(--white-color)">
                                                        <div
                                                                class="col-xl-6 d-flex justify-item-center align-items-center order-last">
                                                                <div
                                                                        class="card-body p-xl-4 pt-sm-3 p-sm-1 pt-md-5 p-md-2 mx-4 h-100 h-lg-100">

                                                                        <div class="text-center ">
                                                                                <img src="/assets/images/logo.png"
                                                                                        width="65px" height="65px"
                                                                                        alt="logo" class="m-2">
                                                                                <span
                                                                                        class="mt-1 mb-5 pb-1 text-color-tertiary fs-3 fw-semibold">Tuấn
                                                                                        Sport</span>
                                                                        </div>

                                                                        <form id="login-form" style="padding-top:22%"
                                                                                action="/login">
                                                                                <div class="form-outline mb-4">
                                                                                        <label
                                                                                                class="form-label ms-4">Email</label>
                                                                                        <input type="email"
                                                                                                id="input-box"
                                                                                                class="form-control input-box"
                                                                                                name="username"
                                                                                                placeholder="Nhập email" />
                                                                                        <div id="form-message"
                                                                                                class="invalid-feedback">
                                                                                        </div>

                                                                                </div>

                                                                                <div class="form-outline mb-4">
                                                                                        <label class="form-label ms-4">Mật
                                                                                                khẩu</label>
                                                                                        <div class="col-12">
                                                                                                <div
                                                                                                        class="input-group mb-3">
                                                                                                        <input name="password"
                                                                                                                type="password"
                                                                                                                value=""
                                                                                                                class="position-relative form-control input-box"
                                                                                                                id="password"
                                                                                                                placeholder="Nhập mật khẩu"
                                                                                                                required="true"
                                                                                                                aria-label="password"
                                                                                                                aria-describedby="basic-addon1" />
                                                                                                        <div
                                                                                                                class="input-group-append">
                                                                                                                <span class="input-group-text"
                                                                                                                        style="border-radius: 0 23px 23px 0;background-color: white"
                                                                                                                        onclick="password_show_hide();">
                                                                                                                        <span
                                                                                                                                id="show_eye">
                                                                                                                                <i
                                                                                                                                        data-feather="eye"></i>
                                                                                                                        </span>
                                                                                                                        <span id="hide_eye"
                                                                                                                                class=" d-none">
                                                                                                                                <i
                                                                                                                                        data-feather="eye-off"></i>
                                                                                                                        </span>
                                                                                                                </span>
                                                                                                        </div>
                                                                                                </div>
                                                                                        </div>
                                                                                </div>

                                                                                <div
                                                                                        class="text-center pt-1 mb-5 pb-1 d-grid gap-2">
                                                                                        <button class="btn btn-primary btn-block fa-lg gradient-custom-2 mb-3"
                                                                                                type="submit">Đăng
                                                                                                nhập</button>
                                                                                        <!-- <a class="text-muted" href="#!">Quên mật khẩu?</a> -->
                                                                                </div>
                                                                        </form>
                                                                </div>
                                                        </div>
                                                        <div class="col-xl-6 d-none d-xl-flex p-xl-5 align-items-center gradient-custom-2 order-first"
                                                                style="background-color: var(--light-gray-color)">
                                                        </div>
                                                </div>
                                        </div>
                                </div>
                        </div>
                </div>
                </div>
        </section>
</body>
<%- include ('../common/lib/bootstrap_js')%>
        <%- include ('../common/lib/jquery')%>
                <%- include ('../common/lib/feather_icon_js')%>
                        <script src="/assets/js/login/login.js"></script>

                        <%- include ('../common/js/index')%>

</html>