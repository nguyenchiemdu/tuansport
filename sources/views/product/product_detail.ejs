<html>

<head>
        <meta charset="utf-8">
        <meta name="viewport" content="width=device-width, initial-scale=1">
        <title>
                <%=product.name %> -Tuấn Sport Đà Nẵng – Số 1 Đà Nẵng
        </title>
        <%- include ('../common/lib/font_css')%>
                <%- include ('../common/lib/feather_icon_css')%>
                        <%- include ('../common/lib/bootstrap_css')%>
                                <%- include ('../common/lib/font_awesome_css')%>


                                        <%- include ('../common/css/style')%>
                                                <link rel="stylesheet" href="/assets/css/product-detail.css">

                                                <link rel="icon" type="image/png" sizes="16x16"
                                                        href="/assets/images/logo.png">
                                                <%- include ('../common/css/owl_carousel')%>

</head>


<body style="background-color:var(--white-color)">
        <%- include ('../common/component/navigator')%>
                <div class="app-body">
                        <div class="container">
                                <div class="mt-5">
                                        <nav aria-label="breadcrumb">
                                                <ol class="breadcrumb">
                                                        <li class="breadcrumb-item" aria-current="#"><a
                                                                        style="color:var(--dark-gray-color)"
                                                                        href="/">Trang chủ</a></li>
                                                        <li class="breadcrumb-item " aria-current="page"><a
                                                                        style="color:var(--dark-gray-color)"
                                                                        href="/san-pham">Sản phẩm</a></li>
                                                        <li class="breadcrumb-item active" aria-current="page"
                                                                style="color:var(--primary-color)">
                                                                <%= product.name %>
                                                        </li>
                                                </ol>
                                        </nav>
                                </div>
                                <div class="mt-4">
                                        <div class="row">
                                                <div class="col-md-5">
                                                        <div class="owl-carousel thumb-slider">
                                                                <% for (let i=0;i < product.images.length;i++) {%>
                                                                        <div class="" data-hash="image-<%=i%>">
                                                                                <img class="rounded-4"
                                                                                        src="<%=product.images[i]%>" />
                                                                        </div>
                                                                        <% } %>
                                                        </div>
                                                        <div class="mt-3 px-5 mb-3">
                                                                <div class="owl-carousel image-controller">
                                                                        <% for (let i=0;i < product.images.length;i++)
                                                                                {%>
                                                                                <a href="#image-<%=i%>">
                                                                                        <img class="rounded-4"
                                                                                                src="<%=product.images[i]%>" />

                                                                                </a>
                                                                                <% } %>
                                                                </div>
                                                        </div>
                                                </div>
                                                <div class="col col-md-7 ps-md-5 product-detail">
                                                        <h1>
                                                                <%=product.name%>
                                                        </h1>
                                                        <div class="mt-4">
                                                                <h5 class="field-name">Mã sản phẩm: <span id="skuCode">
                                                                                <%=product.skuCode%>Master
                                                                        </span></h5>
                                                        </div>
                                                        <% for (let key in mapAttributes) {%>
                                                                <div class="mt-4">

                                                                        <h3>
                                                                                <%=key%>
                                                                        </h3>
                                                                        <div class="d-flex">
                                                                                <%for (let attribute of
                                                                                        mapAttributes[key]){%>
                                                                                        <button type="button"
                                                                                                class="btn btn-light px-3 py-2 attribute-button <%=attribute.attributeId%>" attributeId="<%=attribute.attributeId%>" value="<%=attribute.value%>">
                                                                                                <%=attribute.value%>
                                                                                        </button>
                                                                                        <%}%>
                                                                        </div>
                                                                </div>
                                                                <%}%>
                                                                        <div class="mt-4">
                                                                                <h5 id="product-status" class="field-name d-none">Tình Trạng:
                                                                                        <span>Còn <%=1%> sản
                                                                                                        phẩm</span>
                                                                                </h5>
                                                                        </div>
                                                                        <div class="mt-4">
                                                                                <div class="row">
                                                                                        <div
                                                                                                class="col-sm-12 col-md-auto">
                                                                                                <h2>
                                                                                                        <%=product.price%>
                                                                                                                đ
                                                                                                </h2>
                                                                                                <p
                                                                                                        class="sale-price text-decoration-line-through">
                                                                                                        <%=product.price%>
                                                                                                                đ
                                                                                                </p>
                                                                                        </div>
                                                                                        <div
                                                                                                class="col col-sm-12 col-md-8">
                                                                                                <button class="btn btn-outline-primary my-sm-2"
                                                                                                        type="button">Thêm
                                                                                                        vào giỏ
                                                                                                        hàng</button>
                                                                                                <button class="btn btn-primary my-sm-2"
                                                                                                        type="button">Mua
                                                                                                        ngay</button>
                                                                                        </div>
                                                                                </div>
                                                                                <div
                                                                                        class="row justify-content-between">
                                                                                        <div
                                                                                                class="col-md-auto col-sm-12 d-flex my-3">

                                                                                                <img class="my-auto"
                                                                                                        src="/assets/images/svg/star.svg" />


                                                                                                <img class="my-auto"
                                                                                                        src="/assets/images/svg/star.svg" />


                                                                                                <img class="my-auto"
                                                                                                        src="/assets/images/svg/star.svg" />


                                                                                                <img class="my-auto"
                                                                                                        src="/assets/images/svg/star.svg" />


                                                                                                <img class="my-auto"
                                                                                                        src="/assets/images/svg/star.svg" />

                                                                                                <h5
                                                                                                        class=" ps-3 my-auto">
                                                                                                        18 đánh giá
                                                                                                </h5>
                                                                                        </div>
                                                                                        <div
                                                                                                class="col-md-auto col-sm-12 d-flex my-3">
                                                                                                <button class="btn btn-light rounded-circle px-2 py-2"
                                                                                                        type='button'>
                                                                                                        <img
                                                                                                                src="/assets/images/svg/love.svg" /></button>
                                                                                                <h5
                                                                                                        class="my-auto ms-2">
                                                                                                        Thêm vào wish
                                                                                                        list
                                                                                                </h5>
                                                                                        </div>
                                                                                </div>

                                                                                <div>

                                                                                        <ul class="nav nav-tabs">
                                                                                                <li class="nav-item ">
                                                                                                        <a class="nav-link active description-tab"
                                                                                                                aria-current="page">
                                                                                                                <h4>Mô tả
                                                                                                                        sản
                                                                                                                        phẩm
                                                                                                                </h4>
                                                                                                        </a>
                                                                                                        
                                                                                                </li>
                                                                                                
                                                                                        </ul>
                                                                                        <div id="description"
                                                                                                class="mt-4">
                                                                                                <h3>Mô tả sản phẩm</h3>
                                                                                                <p>
                                                                                                        Thân giày là
                                                                                                        chất liệu da
                                                                                                        tổng hợp mềm mại
                                                                                                        được kết hợp với
                                                                                                        bề mặt vân nổi
                                                                                                        hỗ trợ cầu thủ
                                                                                                        trong việc kiểm
                                                                                                        soát và cảm giác
                                                                                                        bóng tốt trong
                                                                                                        các điều kiện
                                                                                                        thời tiết khác
                                                                                                        nhau

                                                                                                        ♦ Đế giày được
                                                                                                        bố trí đều lớp
                                                                                                        đinh tròn nhằm
                                                                                                        tạo độ bám với
                                                                                                        bề mặt tiếp xúc,
                                                                                                        giữ thăng bằng
                                                                                                        và tránh trơn
                                                                                                        trượt kể cả khi
                                                                                                        trời mưa.

                                                                                                        ♦ Phía bên trong
                                                                                                        giày có lớp lót
                                                                                                        mềm mại, thoáng
                                                                                                        khí.

                                                                                                        ♦ Form giày ôm
                                                                                                        chân, giúp người
                                                                                                        có cảm giác bóng
                                                                                                        tốt nhất.

                                                                                                        ♦ Chất liệu nhẹ
                                                                                                        và bền rất ôm
                                                                                                        chân, tăng độ
                                                                                                        bám sàn giúp ôm
                                                                                                        chân, cho cảm
                                                                                                        giác bóng tốt
                                                                                                        hơn
                                                                                                </p>
                                                                                        </div>
                                                                                </div>
                                                                        </div>
                                                </div>
                                        </div>
                                </div>

                        </div>
                        <section id="san-pham-moi-nhat">
                                <div class="container">
                                        <div class="row">
                                                <div class="col-8 align-self-start">
                                                        <h2>
                                                                Sản phẩm liên quan
                                                        </h2>
                                                </div>
                                                <div class="col text-end d-flex justify-content-end">
                                                        <a href="#" class="d-flex align-items-center"
                                                                style="color: black">
                                                                <h5 class="align-middle">
                                                                        Xem thêm
                                                                </h5>
                                                        </a>
                                                </div>

                                        </div>
                                        <div class="owl-carousel related-product mt-3">
                                                <% for (let item of data){ %>
                                                        <div class="p-3">
                                                                <div code='<%=item.skuCode%>'
                                                                        class=" product-item hover-bigger">
                                                                        <div class="rounded-4 ratio ratio-1x1"
                                                                                style="background-image: url('<%=item.images[0]%>')">
                                                                                <div class="d-float">
                                                                                        <div
                                                                                                class="float-end mt-3 me-3">
                                                                                                <button
                                                                                                        class="btn btn-primary rounded-circle px-2 py-2">
                                                                                                        <img class=""
                                                                                                                src="/assets/images/svg/love.svg"
                                                                                                                style="width:21px;height: auto; " />
                                                                                                </button>
                                                                                        </div>
                                                                                </div>
                                                                        </div>
                                                                        <div class="mt-3">
                                                                                <h4 class="short-description">
                                                                                        <%=item.name%>
                                                                                </h4>
                                                                        </div>
                                                                        <div>
                                                                                <h3>
                                                                                        <%=item.price %> đ
                                                                                </h3>
                                                                                <div class="row row-cols-2">

                                                                                        <div class="col-8">

                                                                                                <h6
                                                                                                        style="color: var(--dark-gray-color)">
                                                                                                        <s>
                                                                                                                $150.00
                                                                                                        </s>
                                                                                                </h6>
                                                                                        </div>
                                                                                        <div
                                                                                                class=" col-4 position-relative ">
                                                                                                <div class="p-2"
                                                                                                        style="position:absolute;bottom: 0;right: 12px;">
                                                                                                        <button
                                                                                                                class="btn btn-light px-3 py-3">
                                                                                                                <img class="d-block"
                                                                                                                        src="/assets/images/svg/cart.svg"
                                                                                                                        style="width:21px;height: auto;" />
                                                                                                        </button>
                                                                                                </div>

                                                                                        </div>
                                                                                </div>
                                                                        </div>
                                                                </div>
                                                        </div>
                                                        <% } %>
                                        </div>
                                </div>

                        </section>
                        <div class="my-3 my-md-5"></div>
                </div>
                <%- include ('../common/component/footer')%>
</body>
<script>
        var mappedProductAttributes =JSON.parse(`<%-JSON.stringify(mappedProductAttributes)%>`) ;
        var mapAttributes =JSON.parse(`<%-JSON.stringify(mapAttributes)%>`) ;
        console.log(mappedProductAttributes)
        console.log(mapAttributes)
</script>
<%- include ('../common/lib/bootstrap_js')%>
        <%- include ('../common/lib/jquery')%>
                <%- include ('../common/lib/feather_icon_js')%>
                        <%- include ('../common/js/owl_carousel')%>
                                <script src="/assets/js/product/product_detail.js"></script>
                                <%- include ('../common/js/index')%>



</html>