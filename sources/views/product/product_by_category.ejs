<html>

<head>
        <meta charset="utf-8">
        <meta name="viewport" content="width=device-width, initial-scale=1">
        <title>
                Tuấn Sport Đà Nẵng – Số 1 Đà Nẵng
        </title>
        <%- include ('../common/lib/font_css')%>
                <%- include ('../common/lib/feather_icon_css')%>
                        <%- include ('../common/lib/bootstrap_css')%>
                                <%- include ('../common/lib/font_awesome_css')%>


                                        <%- include ('../common/css/style')%>
                                                <link rel="stylesheet" href="/assets/css/product-detail.css">
                                                <link rel="stylesheet" href="/assets/css/product_by_category.css">

                                                <link rel="icon" type="image/png" sizes="16x16"
                                                        href="/assets/images/logo.png">
                                                <%- include ('../common/css/owl_carousel')%>


</head>


<body style="background-color:var(--white-color)">
        <%- include ('../common/component/navigator')%>
                <div class="app-body">
                        <div class="container">
                                <div class="mt-5">
                                        <nav aria-label="breadcrumb">
                                                <ol class="breadcrumb">
                                                        <li class="breadcrumb-item" aria-current="#"><a
                                                                        style="color:var(--dark-gray-color);font-size: var(--heading5-font-size); font-weight: var(--heading5-font-weight)"
                                                                        href="/">Trang chủ</a></li>
                                                        <li class="breadcrumb-item active product-name"
                                                                aria-current="page" style="color:var(--primary-color);font-size: var(--heading5-font-size); font-weight: var(--heading5-font-weight)">
                                                                Sản phẩm
                                                        </li>
                                                </ol>
                                        </nav>
                                </div>
                                <div class="row row-cols-sm-1">
                                        <div class="col-md-3 col-sm-12">
                                                <div class="d-flex justify-content-between mb-3">
                                                        <div class="py-2">
                                                                <h4 class="my-auto">Bộ lọc</h4>
                                                        </div>
                                                        <div class="py-2">
                                                                <button type="button" class="btn btn-light px-3 btn-reset">
                                                                        <h5 style="color: var(--tertiary-color);" class="m-0 p-0">Đặt lại</h5>
                                                                </button>
                                                        </div>
                                                </div>
                                                <% if(category.listSize.length>0) {%> 
                                                <div>
                                                        <div class="d-flex justify-content-between mb-3">
                                                                <div class="py-2">
                                                                        <h5>Kích thước</h5>
                                                                </div>
                                                                <div class="py-2 d-none"><img
                                                                                src="/assets/images/svg/dropdown.svg" />
                                                                </div>
                                                        </div>
                                                        <div class="row row-cols-auto my-2">

                                                                <% 
                                                                        
                                                                        for(let size of category.listSize.sort()){ %> 
                                                                        <div class="col mb-3 p-1">
                                                                                <button type="button"
                                                                                        class="btn btn-light px-3 py-2 size-button 162354"
                                                                                         value="<%=size%>">
                                                                                         <%=size%>
                                                                                </button>
                                                                        </div>
                                                                        <% } %> 
                                                                


                                                        </div>
                                                </div>
                                                <% } %> 
                                                <div>
                                                        <div class="d-flex justify-content-between mb-3">
                                                                <div class="py-2">
                                                                        <h5>Mức giá</h5>
                                                                </div>
                                                                <div class="py-2 d-none"><img
                                                                                src="/assets/images/svg/dropdown.svg" />
                                                                </div>
                                                        </div>
                                                        <div class="col mb-3">
                                                                <div class="d-flex justify-content-between mb-3">
                                                                        <div class="py-2">
                                                                                <h5 class="slider-start"></h5>
                                                                        </div>
                                                                        <div class="py-2 ">
                                                                                <h5 class="slider-end">

                                                                                </h5>
                                                                        </div>
                                                                </div>
                                                                <div class="middle">
                                                                        <div class="multi-range-slider">
                                                                                <input type="range" id="input-left"
                                                                                        min="0" max="1000000"
                                                                                        value="0">
                                                                                <input type="range" id="input-right"
                                                                                        min="0" max="1000000"
                                                                                        value="1000000">

                                                                                <div class="slider">
                                                                                        <div class="track"></div>
                                                                                        <div class="range"></div>
                                                                                        <div class="thumb left"></div>
                                                                                        <div class="thumb right"></div>
                                                                                </div>
                                                                        </div>
                                                                </div>

                                                        </div>
                                                        <div class="d-grid my-5">
                                                                <button class="btn btn-primary apply-filter" type="button">Áp dụng</button>
                                                        </div>
                                                </div>
                                        </div>
                                        <div class="col-md-9 mb-3">
                                                <h2><%=category.categoryName %> </h2>
                                                <div class="d-flex justify-content-between my-2">
                                                        <div class="py-2">
                                                                <h5 class=""><%=countResult %>  Sản phẩm phù hợp</h5>
                                                        </div>
                                                        <div class="py-2 ">
                                                                <h5 class="">
                                                                        Giá từ cao -> thấp
                                                                </h5>
                                                        </div>
                                                </div>
                                                <div class="list-product row row-cols-2 row-cols-md-4 row-cols-lg-4  row-cols-sm-3 gx-4 gy-4 mt-3 mb-4">
                                                        <% for (let item of docs){ %>
                                                        <%- include('../common/component/product_item', {item: item}) %> 
                                                        
                                                        <%}%> 
                                                </div>
                                                <%- include('product_pagination')  %> 

                                        </div>
                                </div>
                        </div>
                </div>
                <!-- Toast notification-->
                <div class="toast-container position-fixed bottom-0 end-0 p-3">
                        <div id="add-to-cart-success" class="toast text-bg-primary" role="alert" aria-live="assertive" aria-atomic="true">
                                <div class="toast-header">
                                        <img src="/assets/images/logo.png" width="20px" class="rounded me-2" alt="logo">
                                        <strong class="me-auto">tuansportdanang</strong>
                                        <small>bây giờ</small>
                                        <button type="button" class="btn-close" data-bs-dismiss="toast"
                                                aria-label="Close"></button>
                                </div>
                                <div class="toast-body go-to-cart">
                                        <span></span> <br/>
                                        <a href="/cart" style="color: white"></a>
                                </div>
                        </div>
                </div>
                <%- include ('../common/component/footer')%>
</body>
<%- include ('../common/lib/bootstrap_js')%>
        <%- include ('../common/lib/jquery')%>
                <%- include ('../common/lib/feather_icon_js')%>
                        <%- include ('../common/js/owl_carousel')%>
                                <%- include ('../common/js/index')%>
                                        <script type="text/javascript"
                                                src="/assets/js/product/product_by_category.js"></script>


</html>