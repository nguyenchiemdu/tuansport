<section  style="background-color: var(--light-gray-color);">
    <div class="container-fluid ">
    <div class="row justify-item-center align-items-center h-100">
        <div class="">
        <div class="rounded-3 text-black">
            <div class="row g-0 p-0 h-100 h-md-0 w-lg-0" style="background-color: var(--white-color)">
            <div class="col-xl-6 d-flex justify-item-center align-items-center order-last">
                <div class="card-body p-xl-4 pt-sm-3 p-sm-1 pt-md-5 p-md-2 mx-4 h-100 h-lg-100">

                <div class="text-center ">
                    <img src="/assets/images/logo.png" width="65px" height="65px" alt="logo" class="m-2">
                    <span class="mt-1 mb-5 pb-1 text-color-tertiary fs-3 fw-semibold">Tuấn Sport</span>
                </div>

                <form id="login-form" style="padding-top:22%" action="/login">
                    <div class="form-outline mb-4">
                        <label class="form-label ms-4">Email</label>
                        <input type="email" id="input-box" class="form-control input-box" name="username"
                        placeholder="Nhập email"/>
                        <div id="form-message" class="invalid-feedback"></div>
                        
                    </div>

                    <div class="form-outline mb-4">
                        <label class="form-label ms-4">Mật khẩu</label>
                        <div class="d-flex justify-items-center align-items-center">
                            <input type="password" class="position-relative form-control input-box" name="password" 
                            placeholder="Nhập mật khẩu"/>
                            <div class="feather-24" id="inputGroupPrepend">
                                <span class="end-0 feather-24" id="show-hidden-icon"  style="top: 0px" >
                                    <i data-feather="eye"></i>
                                    
                                </span>
                            </div>
                        </div>
                        
                    </div>

                    <div class="text-center pt-1 mb-5 pb-1 d-grid gap-2">
                        <button class="btn btn-primary btn-block fa-lg gradient-custom-2 mb-3" type="submit">Log
                        in</button>
                        <a class="text-muted" href="#!">Forgot password?</a>
                    </div>
                </form>    
                </div>
            </div>
            <div class="col-xl-6 d-none d-xl-flex p-xl-5 align-items-center gradient-custom-2 order-first" style="background-color: var(--light-gray-color)"> 
                </div>
            </div>  
            </div>
        </div>
        </div>
    </div>
    </div>
</section>